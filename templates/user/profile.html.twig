{% extends 'base.html.twig' %}

{% block title %}Update profile {% endblock %}

{% block body %}
    {% include 'shared/navbar.html.twig' %}

    <style>




        .wrapper {
            min-height: 100vh;
            padding: 50px 20px;
            padding-top: 100px;
            display: flex;
            /*background-color: #F0F2F5;*/

        }

        .custom-card-body {
            margin-top: -15%;
        }

        .profile-card {
            margin: 6% auto auto;
            width: 100%;
            min-height: 460px;
            box-shadow: 0 8px 60px -10px rgba(13, 28, 39, 0.6);
            background: #fff;
            border-radius: 12px;
            max-width: 700px;
            position: relative;
        }


        @media screen and (max-width: 576px) {


            .profile-card {
                margin: 25% auto auto;
            }
        }


        .profile-card__img {
            width: 150px;
            height: 150px;
            margin-left: auto;
            margin-right: auto;
            margin-bottom: 10%;
            transform: translateY(-50%);
            border-radius: 50%;
            overflow: hidden;
            position: relative;
            z-index: 4;
            box-shadow: 0px 5px 60px 0px #A32C30FF, 0 0px 0px 5px rgba(157, 27, 27, 0.22);
        }

        .profile-card__img

        @media screen and (max-width: 576px) {
            width: 120px;
            height: 120px;
        }

        .profile-card__img img {
            display: block;
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50%;
        }

        .profile-card__cnt {
            margin-top: -35px;
            padding: 0 20px 40px;
            transition: all 0.3s;
        }

        .profile-card__name {
            font-weight: 700;
            font-size: 24px;
            color: var(--main-color);
            margin-bottom: 15px;
        }

        .profile-card__txt {
            font-size: 17px;
            color: #494949;
            margin-bottom: 5px;
        }

        .profile-card__txt strong {
            font-weight: 700;
        }


    </style>

    <div class="wrapper" style="background-color: #F0F2F5;">
        <div class="profile-card">
            <div class="profile-card__img">
                <img src="https://res.cloudinary.com/muhammederdem/image/upload/v1537638518/Ba%C5%9Fl%C4%B1ks%C4%B1z-1.jpg"
                     alt="profile card">
            </div>
            <div class="custom-card-body">
                <!-- first lastname -->
                <div class="text-center mb-5">
                    <!-- Add mx-auto for centering and text-left for left-aligning content -->
                    <div class="profile-card__name text-center">{{ user.firstname }} {{ user.lastname }}</div>
                    <div class="profile-card__txt "><span class="iconify me-2" data-icon="entypo:email" data-width="21"
                                                          data-height="21"></span><strong>{{ user.username }}</strong></div>
                    <div class="profile-card__txt "><span class="iconify me-2" data-icon="streamline:send-email" data-width="19"
                                                          data-height="19"></span><strong> {{ user.email }}</strong></div>
                </div>


                {# Add more fields as needed #}
{#complete customize buton#}
                <div></div>
                <a href="{{ path('app_user_edit') }}" class="btn custom-btn1 mx-auto w-75">Edit Profile</a>

                <div class="border border-top">
                </div>
            </div>

        </div>

    </div>



{% endblock %}
