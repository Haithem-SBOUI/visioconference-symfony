<style>
    .nav-link {
        color: #383838 !important;
    }
</style>
<div class="fixed-top">
    <nav class="navbar bg-white shadow mb-4 topbar navbar-light w-100 navbar-expand-lg fixed-top">
        <div class="container-fluid bg-white">

            <!-- ***** Logo start ***** -->
            <a href="#" class="navbar-brand logo">Edu Meeting</a>
            <!-- ***** Logo End ***** -->

            <!-- ***** Toggle Button for Mobile ***** -->
            <!-- Your custom button for toggling the navigation -->
            <button id="customNavbarToggler " class="navbar-toggler" type="button" onclick="toggleNavbar()">
                <span class="custom-toggler-icon">&#9776;</span>
            </button>


            <!-- ***** Menu Start ***** -->
            <div class="collapse navbar-collapse" id="navbarNavMain">
                <!-- Your navigation items go here -->
                <ul class="navbar-nav ms-auto pe-3">
                    <li class="nav-item d-lg-none mb-3">
                        <!-- Show this on small screens only -->
{% if app.user is not null %}
                            <a class="nav-link dropdown-toggle" aria-expanded="false" data-bs-toggle="dropdown" href="#">
                                <img style="max-height: 35px; max-width: 35px" class="border rounded-circle img-profile" src="{{ vich_uploader_asset(app.user, 'imageFile') }}" alt="Profile Image">
                                <span class="d-inline me-2 small">{{ app.user.username }}</span>
                            </a>
                            <div class="dropdown-menu  animated--grow-in">
                                <a class="dropdown-item" href="#"><i class="fas fa-user fa-sm fa-fw me-2 "></i>&nbsp;Profile</a>
                                <a class="dropdown-item" routerLink="settings/account-details"><i class="fas fa-cogs fa-sm fa-fw me-2 "></i>&nbsp;Settings</a>
                                <a class="dropdown-item" href="#"><i class="fas fa-list fa-sm fa-fw me-2 "></i>&nbsp;Activity log</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#"><i class="fas fa-sign-out-alt fa-sm fa-fw me-2 text-gray-400"></i>&nbsp;Logout</a>
                            </div>
{% endif %}
                    </li>



                    <li class="nav-item">
                        <a class="nav-link active px-3 active" aria-current="page" href="{{ path('home') }}">Home</a>

                    </li>
                    {% if is_granted('ROLE_USER') %}
                        <li class="nav-item">
                            <a class="nav-link px-3" href="{{ path('app_meeting_new') }}">Create Meeting</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3" routerLink="/join-with-roomId">Join With Room id</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link px-3"  href="{{ path('app_meeting_public') }}">Public Meetings</a>
                        </li>

                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link px-3"  href="{{ path('app_meeting_public') }}">Public Meetings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3"  href="{{ path('app_login') }}">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3"  href="{{ path('app_register') }}">Register</a>
                        </li>
                    {% endif %}


                    <div class=" d-sm-block topbar-divider"></div>
                    <!--            profile avatar-->
                    <li class="nav-item d-none d-lg-inline">
                        <!-- Hide the dropdown menu on small screens -->
                        {% if app.user is not null %}

                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle" href="#" onclick="toggleDropdown()" role="button">
                                <span class="d-inline me-2 small">{{ app.user.username }}</span>
                                <img style="max-height: 35px; max-width: 35px" class="border rounded-circle img-profile" src="{{ vich_uploader_asset(app.user, 'imageFile') }}" alt="Profile Image">
                            </a>
                            <div class="dropdown-menu shadow dropdown-menu-end animated--grow-in" id="userDropdown">
                                <a class="dropdown-item" href="/profile"><i class="fas fa-user fa-sm fa-fw me-2 "></i>&nbsp;Profile</a>
                                <a class="dropdown-item" href="/settings/account-details"><i
                                            class="fas fa-cogs fa-sm fa-fw me-2 "></i>&nbsp;Settings</a>
                                <a class="dropdown-item" href="#"><i class="fas fa-list fa-sm fa-fw me-2 "></i>&nbsp;Activity
                                    log</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="{{ path('app_logout') }}"><i
                                            class="fas fa-sign-out-alt fa-sm fa-fw me-2 text-gray-400"></i>&nbsp;Logout</a>
                            </div>
                            {% endif %}
                        </div>

                        <script>
                            function toggleDropdown() {
                                var dropdown = document.getElementById("userDropdown");
                                dropdown.classList.toggle("show");
                            }

                            window.onclick = function (event) {
                                if (!event.target.matches('.dropdown-toggle') && !event.target.matches('.img-profile') && !event.target.matches('.small')) {
                                    var dropdowns = document.getElementsByClassName("dropdown-menu");
                                    for (var i = 0; i < dropdowns.length; i++) {
                                        var openDropdown = dropdowns[i];
                                        if (openDropdown.classList.contains('show')) {
                                            openDropdown.classList.remove('show');
                                        }
                                    }
                                }
                            }
                        </script>

                    </li>
                </ul>

            </div>

            <script>
                function toggleNavbar() {
                    var navbar = document.getElementById("navbarNavMain");
                    navbar.classList.toggle("show");
                }
            </script>


        </div>
    </nav>
</div>