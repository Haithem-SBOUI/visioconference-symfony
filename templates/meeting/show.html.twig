    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ meeting.id }}</td>
            </tr>
            <tr>
                <th>RoomId</th>
                <td>{{ meeting.roomId }}</td>
            </tr>
            <tr>
                <th>Title</th>
