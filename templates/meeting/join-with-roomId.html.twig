{% extends 'base.html.twig' %}

{% block title %}Join meeting{% endblock %}

{% block body %}

    {% include 'shared/navbar.html.twig' %}


    <section class="heading-page header-text" id="top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h6>Join With it</h6>
                    <h2>You Have Already a Room Id?</h2>
                </div>
            </div>
        </div>
    </section>

    <section class="meetings-page" id="meetings">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-4 card custom-card1 shadow p-3 mb-5 ">
                    <div class="card-body">
                        <h2 class="text-center mb-5">Join Meet</h2>





                        {{ form_start(form) }}
                        {{ form_row(form.roomId) }}
                        {{ form_end(form) }}


                        {% if form.vars.valid %}
                            {# Check if roomId is set before creating the link #}
                            {% if form.vars.data.roomId is not empty %}
                                <a class="btn custom-btn1" href="{{ path('app_meeting_room', {'roomId': form.vars.data.roomId}) }}">Create Meeting</a>
                            {% else %}
                                {# Handle case where roomId is empty or not set #}
                                <p>Please fill in the roomId field.</p>
                            {% endif %}
                        {% endif %}











                    </div>
                </div>
            </div>
        </div>
    </section>




{% endblock %}
